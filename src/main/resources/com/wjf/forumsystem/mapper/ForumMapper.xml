<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wjf.forumsystem.mapper.ForumMapper">

    <select id="findForums" resultType="com.wjf.forumsystem.entity.Forums">
        select * from forums
        <where>
            <if test="forumId != null">
                and forum_id=#{forumId}
            </if>
            <if test="forumName !=null ">
                and forum_name=#{forumName}
            </if>
        </where>
    </select>
</mapper>